<resources>
    <!-- Base application theme. -->
    <style name="Theme.BBoxJournal" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/white_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BBoxJournal.TextView" parent="Widget.MaterialComponents.TextView" />

    <style name="Theme.BBoxJournal.TextView.Heading" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BBoxJournal.TextView.Content" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.BBoxJournal.TextView.List.Content" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Theme.BBoxJournal.TextView.DateTime" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textColor">@color/black_900</item>
    </style>

    <style name="Theme.BBoxJournal.TextView.List.DayHeader" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Theme.BBoxJournal.TextView.List.MonthHeader" parent="Theme.BBoxJournal.TextView">
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:maxLines">1</item>
    </style>


    <style name="Theme.BBoxJournal.Button" parent="ThemeOverlay.Material3.Button.ElevatedButton">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/blue_500</item>
    </style>

    <style name="Theme.BBoxJournal.ColorPicker" parent="Widget.MaterialComponents.CardView">
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardElevation">@dimen/_5dp</item>
        <item name="cardCornerRadius">@dimen/_5dp</item>
        <item name="checkedIcon">@drawable/ic_check</item>
    </style>

    <style name="Theme.BBoxJournal.List.DayHeader" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/white_900</item>
    </style>

    <style name="Theme.BBoxJournal.List.MonthHeader" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">@dimen/_5dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/green_500</item>
    </style>
</resources>